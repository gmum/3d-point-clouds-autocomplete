{
    "mode": "training",
    "dataset": {
        "name": "3depn",
        "path": "data/dataset/3depn",
        "classes": ["03001627"],
        "num_samples": 4
    },
    "training": {
        "optimizer": {
            "type": "Adam",
            "hyperparams": {
                "lr": 0.0001,
                "weight_decay": 0,
                "betas": [
                    0.9,
                    0.999
                ],
                "amsgrad": false
            }
        },
        "lr_scheduler": {
            "type": "StepLR",
            "hyperparams": {
                "step_size": 30001,
                "gamma": 0.01
            }
        },
        "dataloader": {
            "train": {
                "batch_size": 64,
                "shuffle": true,
                "num_workers" : 8,
                "drop_last" : true
            },
            "val": {
                "batch_size": 60,
                "shuffle": true,
                "num_workers" : 8,
                "drop_last" : false
            }
        },
        "state_save_frequency" : 10,
        "loss_coef": 0.05,
	"min_save_epoch": 10,
        "max_epoch": 400
    },
    "experiments": {
	"epoch": "best_val",
	"settings": {
            "fixed": {
                "execute": true,
                "mean": 0.0,
                "std": 0.13,
                "amount": 64,
                "triangulation_config": {
                    "execute": false,
                    "method": "edge",
                    "depth": 2
                }
            },
            "evaluate_generativity": {
                "execute": false,
                "batch_size": 150,
                "num_workers" : 8
            },
	    "compute_mmd_tmd_uhd": {
                "execute": true
            }
	}
    },
    "full_model": {
        "random_encoder": {
            "output_size": 128,
            "use_bias": true,
            "relu_slope": 0.2
        },
        "real_encoder": {
            "output_size": 128,
            "use_bias": true,
            "relu_slope": 0.2
        },
        "hyper_network": {
            "use_bias": true,
            "relu_slope": 0.2
        },
        "target_network": {
            "use_bias": true,
            "relu_slope": 0.2,
            "freeze_layers_learning": false,
            "layer_out_channels": [
                32, 64, 128, 64
            ]
        },
        "target_network_input": {
            "constant": false,
            "normalization": {
                "enable": true,
                "type": "progressive",
                "epoch": 100
            }
        }
    },
    "setup": {
        "seed": 1856,
        "gpu_id": 0
    },
    "telegram_logger": {
        "enable": false,
        "bot_token": "",
        "chat_id": ""
    },
    "results_root": "data/results"
}
